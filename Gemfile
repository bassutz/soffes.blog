source 'https://rubygems.org'

# Latest Ruby
ruby '2.2.2'

# Web server
gem 'puma'

# Simple HTTP
gem 'sinatra'

# Use the right host
gem 'rack-canonical-host'

# Faster ERB
gem 'erubis'

# Markdown
gem 'redcarpet', require: false

# Code coloring
gem 'pygments.rb', require: false

# HTML manipulation
gem 'nokogiri', require: false

# Redis client
gem 'redis'

# Safety
gem 'safe_yaml'

# Asset pipeline
gem 'sprockets'

# Utilities
gem 'rake'

# JSON
gem 'json'

# Asset uploading
gem 'aws-sdk', require: false

# Stylesheet
gem 'sass'
gem 'sprockets-sass'
gem 'bourbon'

# Javascript
gem 'coffee-script'
gem 'uglifier'

group :development do
  # Automatic reloading
  gem 'shotgun'
end

group :test do
  # Testing
  gem 'minitest', '>= 5.0'

  # Colored output
  gem 'minitest-reporters'
end

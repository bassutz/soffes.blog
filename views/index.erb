<section class="posts">
  <% @posts.each do |post| %>
  <article>
    <header>
      <h2><a href="/<%= post['key'] %>"><%= post['title'] %></a></h2>
      <% if post['published_at'] && published_at = Time.at(post['published_at'].to_i) %>
      <p>Posted on <time datetime="<%= published_at.strftime('%Y-%m-%dT%H:%M:%SZ') %>"><%= published_at.strftime('%B %e, %Y') %></time></p>
      <% end %>
    </header>
    <p><%= post['excerpt_html'] %> <a href="/<%= post['key'] %>" class="continue-reading">Continue reading &rarr;</a></p>
  </article>
  <% end %>
</section>

<% if @posts.count > 0 %>
<%= erb :pagination, locals: { page: @page, total_pages: @total_pages, window: 2 } %>
<% end %>

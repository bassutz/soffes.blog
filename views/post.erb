<article>
  <header>
    <h2><a href="/<%= post['key'] %>"><%= post['title'] %></a></h2>
    <% if post['published_at'] && published_at = Time.at(post['published_at'].to_i) %>
    <p>Posted on <time datetime="<%= published_at.strftime('%Y-%m-%dT%H:%M:%SZ') %>"><%= published_at.strftime('%B %e, %Y') %></time></p>
    <% end %>
  </header>
  <%= post['html'] %>
</article>

<% if @previous_post || @next_post %>
<!-- <nav class="posts"> -->
  <p>Previous: <%= previous_post['title'] %></p>
  <p>Next: <%= next_post['title'] %></p>
<!-- </nav> -->
<% end %>

<section class="post">
  <% if cover_image_url = @post['cover_image'] %>
  <div class="cover"><div style="background-image:url(<%= cover_image_url %>)"></div></div>
  <% end %>
  <article>
    <header>
      <h2><a href="/<%= @post['key'] %>"><%= @post['title'] %></a></h2>
      <% if @post['published_at'] && published_at = Time.at(@post['published_at'].to_i) %>
      <p>Posted on <time datetime="<%= published_at.strftime('%Y-%m-%dT%H:%M:%SZ') %>"><%= published_at.strftime('%B %e, %Y') %></time></p>
      <% end %>
    </header>
    <%= @post['html'] %>
  </article>
  <% if @older_post; @hide_footer = true %>
  <footer>
    <div>
      <%= erb :'_post', locals: { post: @older_post } %>
      <p class="copyright">Â© 2006-<%= Time.now.year %> <a href="/" rel="home">Sam Soffes</a></p>
    </div>
  </footer>
<% end %>
</section>
